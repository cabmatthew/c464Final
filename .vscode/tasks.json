{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with OpenMP",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fopenmp",
                "-O3",
                "-o",
                "hoare_parallel",
                "hoare_parallel.cpp"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}